<li class="comment">

  <p> <%= image_tag comment.user.avatar.url(:com) %> Comment by <%= comment.user.name %></p>

  <div class="body">
    <%= comment.body %>
  </div>
  
  <p><%= link_to 'Add a Reply', new_comment_comment_path(comment), class: "btn btn-primary btn-sm" %></p>

  <p><%= if current_user.id == comment.user_id then link_to 'Edit', edit_comment_comment_path(comment, comment) end %> or <%= if current_user.id == comment.user_id then link_to 'Delete', post_comment_path(comment.commentable, comment), :method => :delete end%> </p>

  
  
  <% unless comment.comments.empty? %>
  <ul class="comment_list">
    <%= render :partial => 'comments/comment', :collection => comment.comments %>
  </ul>
  <% end %>
</li>