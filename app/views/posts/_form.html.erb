
<%= form_for(@post) do |f| %>
<ul>
  <% @post.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<p>
  <%= f.label :title %><br />
  <%= f.text_field :title, class: "title-area-size" %>
</p>
<p>
  <%= f.label :body %><br />
  <%= f.text_area :body, class: "text-area-size"  %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>